{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "module": "es2022",
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./",
    "paths": {
      "#/*": ["./src/*"]
    }
  }
}
